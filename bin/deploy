#!/bin/bash

export RAILS_ENV="production"
export DEVISE_SECRET_KEY="b3a4081fc8d021b662a4e2408b6d101e9a923505384248fda1c6e9c6d3096856169a4994f1ba162fe09a3a96c0b5c06c2af78d931c291875dbe8bc981b4bdaad"

BRANCH="master"

if [ $1 ]
then
  BRANCH=$1
fi

echo
echo "Preparing to deploy rails application using ${BRANCH} from origin."

if [ ! -d ".git" ]
then
    echo "This is not a git repositiory!"
    exit 1
fi

echo "You need sudo access..."
sudo echo "Looks like you have it!"
echo
echo
echo "About to do work..."

# pull in the code
git pull origin $BRANCH

# install/update gems
bundle install

# update the database
rake db:migrate

# compile the assets
rake assets:precompile

# restart the webserver
sudo nginx -s reload

echo "Did the work, enjoy!"